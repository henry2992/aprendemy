$(document).on('ready page:load', function(){

  $(".simulator-ajax-submittable").on('click', function(e){
    var question_form = $(this).data('form');
    $("."+question_form).submit();
  })

  $("#submitTimerBtn").click(function(e){
    var time_left;
    if ($(".simulator-pause-form .timeValue").length) {
      time_left = $("#countDownTimer .timeValue").val();
      $(".simulator-pause-form .timeValue").remove();
    } else {
      time_left = $("#countDownTimer").html();
    }
    $(".simulator-pause-form").append('<input class="timeValue" type="hidden" name="timer" value=' + time_left + '>')
  })

  $('#chartFilter').change(function(){
    $.ajax({
      url: $(this).data("action"),
      type: "GET",
      data: {select_tag_value: $('#chartFilter option:selected').text()},
    })
  });
})
