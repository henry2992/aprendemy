.category-wraper{
	border: 1px solid #ddd;
	margin-bottom: 20px;
}

.category-heading {
	background-color: #f5f5f5;
	border-bottom: 1px solid #ddd;
	padding: 10px;
}

.category-heading h1 {
	font-weight: 600;
	color: #06476B;
	font-size: 1.5em;
}

.subcategories-wraper{
	padding: 10px;
}

/*Subcategories*/


.subcategory-holder{
    margin-top: 25px !important;
}

.book-card-edit .subcategory-info-wrapper{
	-webkit-animation: cardTitle .3s ease forwards;
    animation: cardTitle .3s ease forwards
}

.book-card-edit .subcategory-information{
	-webkit-animation: cardInfo .3s ease forwards;
    animation: cardInfo .3s ease forwards;
    -webkit-animation-iteration-count: 1;
    animation-iteration-count: 1;
    display: block;
    position: relative;
    opacity: 0;
    margin-bottom: 0.3rem
}

.subcategory-card:hover{
	color: rgba(255, 255, 255, 0.9)
}

.subcategory-card:hover:before{
	 opacity: 1
}




.subcategory-card:hover .subcategory-info-wrapper{
	-webkit-animation: cardTitle .3s ease forwards;
    animation: cardTitle .3s ease forwards
}




.subcategory-card:hover .subcategory-information{
	-webkit-animation: cardInfo .3s ease forwards;
    animation: cardInfo .3s ease forwards;
    -webkit-animation-iteration-count: 1;
    animation-iteration-count: 1;
    display: block;
    position: relative;
    opacity: 0;
    margin-top: 7px
}


@keyframes cardInfo {
    from {
        opacity: 0
    }

    to {
        opacity: 1
    }
}

@keyframes cardTitle {
    from {
        bottom: -1rem
    }

    to {
        bottom: 0rem
    }
}




.subcategory-title{
	 font-weight: 300;
    text-align: right;
    font-size: 1.5em;
    color: white;
    line-height: 1.2;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.64);
    margin-bottom: 9px
}


.subcategory-title a {
	color: white;
}


.subcategory-information {
	margin: 0;
    padding: 0;
    text-align: right;
    opacity: 0;
    margin-bottom: 0;
    -webkit-transition: all .3s ease;
    transition: all .3s ease
}




.subcategory-information li{
	list-style: none;
    display: inline-block;
    color: white;
    font-size: 0.8rem;
    font-weight: 400
}




.subcategory-information li i {
	vertical-align: middle;
    margin-right: 0.1rem;
    color: #20A2D6
}


.subcategory-info-wrapper{
	position: absolute;
    bottom: -1rem !important;
    left: 0;
    right: 0;
    padding: 1rem;
    -webkit-transition: all .3s ease;
    transition: all .3s ease;
}

.subcategory-card{
	background-position: center;
    height: 250px;
    max-width: 200px;
    background-size: auto 100%;
    margin-bottom: 0;
    border: 1px solid #ced7df;
    border-radius: 5px;
    position: relative;
    cursor: pointer;
    -webkit-transition: all .3s ease;
    transition: all .3s ease;
    margin: 0px auto;
}


.subcategory-card:before{
	border-radius: 2px;
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-image: -webkit-linear-gradient(top, rgba(0, 38, 45, 0) 0%, #00262d 100%);
    background-image: linear-gradient(to bottom, rgba(0, 38, 45, 0) 0%, #00262d 100%);
    opacity: 0.8;
    -webkit-transition: all .3s ease;
    transition: all .3s ease
}

.book-card-edit:before {
    opacity: 1
}


/*Questions */

.img-question{
    display: block;
    width: 100%;
    height: auto;
}



