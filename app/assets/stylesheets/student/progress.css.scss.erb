/**************************************/
/********** Progress Index ***********/
/************************************/

.progress-course-img{
	background-position: center;
	background-repeat: no-repeat;
	height: 275px;
	max-width: 250px;
	background-size: cover;
	margin: 0 auto;
	border: 1px solid #ced7df;
	border-radius: 5px;
	position: relative;
	-webkit-transition: all .3s ease;
	transition: all .3s ease;
}


.progress-course-img:before{
	border-radius: 2px;
	content: '';
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background-image: -webkit-linear-gradient(top, rgba(0, 38, 45, 0) 0%, #00262d 100%);
	background-image: linear-gradient(to bottom, rgba(0, 38, 45, 0) 0%, #00262d 100%);
	opacity: 0.8;
	-webkit-transition: all .3s ease;
	transition: all .3s ease
}

.progress-details{ border-left: none; padding: 0px; }
.progress-details h1 { font-weight: 400; color: #06476B; text-align: center;}
.progress-details h3 { font-size: 0.8em; font-weight: 300; color: #555; line-height: 1.5; text-align: center; margin-top: -5px !important; }



.progress-details p {
	margin-top: 20px;
	font-size: 0.8em;
	font-weight: 300;
	color: #555;
	line-height: 1.5;
	margin-bottom: 0px !important;
}

/****** Curriculum *******/

.curriculum-title { font-weight: 400; color: #06476B; text-align: center; margin-top: 25px !important; }

.progress-wraper { border: 1px solid #ddd; margin-bottom: 20px; margin-top: 20px; }
.progress-wraper:hover{ cursor: pointer;}
.progress-card{
	color: #333333;
	background-color: #f5f5f5;
	border-bottom: 1px solid #ddd;
	padding: 10px;
}

.progress-card h4{
	font-size: 0.8em;
	color: #555;
}

.progress-card h1 {
	font-weight: 600;
	color: #06476B;
	font-size: 1em;
	margin-top: 5px !important;
}


.curriculum {
	padding: 10px;
	display: none;
}
.curriculum ul {
	list-style-type:none
}

.curriculum li {
	border: 1px solid #f4f4f4;
	position: relative;
	margin: 10px;
}

.curriculum li:hover {
	border: 1px solid #337ab7;
}

.curriculum li:hover {
	background-color: #f5f5f5;
}

.curriculum a {
	color: #337ab7;
}


.curriculum-type{
	display: inline-block;
	vertical-align:middle;
}
.curriculum-check{
	display: inline-block;
}


.curriculum-item {
	font-size: 0.8em;
	text-decoration: none;
	display: inline-block;
	margin-left: 10px;
}

.curriculum-item a:hover {
	color: #337ab7;
	text-decoration: none;
}


.curriculum i { padding: 10px; font-size: 1.5em; color: #fff; }


.video { background-color: #0a8ecd; }
.blog { background-color: #e4652d; }
.task{ background-color: #98ca3f }
.progress-check{
	color:  #ddd !important;
	position: absolute;
	right: 0;
	top: 0;
}




