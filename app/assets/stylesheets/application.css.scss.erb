    box-shadow: 0px 2px 0px rgba(0, 0, 0, 0.15);
}

 .trial-banner {
    background-color: rgb(63,190,232);
    border-radius: 5px 5px 0px 0px;
    text-align: center;
    font-weight: 500;
    padding: 20px;
    margin: -30px -30px 30px;
    color: #FFF;
}

.input-text, textarea {
    background: #E8EBED none repeat scroll 0% 0%;
    margin-top: 15px;
    font-size: 14px;
    color: #576366;
    width: 100%;
    font-family: "Roboto Slab",sans-serif;
    padding: 12px 15px;
    outline: 0px none;
    border: 2px solid #E8EBED;
    border-radius: 5px;
    box-sizing: border-box;
    transition: all 0.2s ease 0s;
}


.free-trial-button {
    background-color: rgb(63,190,232);
    border: 2px solid;
    border-color: rgb(63,190,232);
    color: #FFF;
    font-size: 16px;
    height: 52px;
    line-height: 48px;
    padding: 0px 32px;

    box-sizing: border-box;
    -moz-appearance: none;
    -moz-user-select: none;
    transition: color 0.3s ease 0s, background-color 0.3s ease 0s, border-color 0.3s ease 0s, width 0.3s ease 0s, opacity 0.3s ease 0s;
    border-radius: 4px;
    cursor: pointer;
    display: inline-block;
    font-family: "Roboto Slab",sans-serif;
    font-weight: 500;
    position: relative;
    margin-top: 20px;
    outline: medium none;
    text-align: center;
    text-decoration: none;
    vertical-align: baseline;
    white-space: nowrap;

    width: 100%;

}

