/********* Vertical NavBar Fix **********/
@media only screen and (max-width : 768px) {

  .application-navbar{
    width: 90%;
    margin-left: 5%;
  }

}

/* Desktops and laptops ----------- */
@media only screen  and (min-width : 992px) {

    .home-banner-content-heading{
        margin-top: 50px !important;
        margin-bottom: 35px !important;
       font-size: 2.5em; 
    }
    .mobile-img-banner {
        width: 500px;
        margin-left: -35px;
        margin-top: 15px;
    }
    .center-list{
        display: block;
        width: 375px;
        margin: 0 auto 0 auto;
    }
    .lg-screen-container{
        width: 992px;
        margin: 0 auto 0 auto;
    }  
    .line-section {
        width: 992px;
        margin: 30px auto 50px auto !important;
    }

    .home-aprendemy-section{
        padding-bottom: 0px;
    }
    .home-resources-section{
        padding-bottom: 0px;
    }

    /****** Application Content *********/
    .avatar-container{
      display: inline-block;
      vertical-align: middle;
    }
    .img-responsive{
      width: 100px;
      
    }
      .img-text{
        width: 100px;
    }
    .nav-info-container{
      display: inline-block;
      vertical-align: middle;
    }
    
    .app-text-holder{
      padding: 20px 25px;
    }

    .news-holder{
      text-align: left;
    }

    .news-img{
      display: inline-block;
      width: 100px;
      vertical-align: middle;
      top: 0;
    }
    .exercises-img{
      width: 20%;
    }

}

