.container-animation{
  margin-top: 50px;
  min-height: 93vh;
  position: relative;
  width: 100%;
  height: 400px;
  background: #07476b;
  background: -moz-linear-gradient(top,  #07476b 0%, #207cca 77%, #2989d8 86%, #7db9e8 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top,  #07476b 0%,#207cca 77%,#2989d8 86%,#7db9e8 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom,  #07476b 0%,#207cca 77%,#2989d8 86%,#7db9e8 100%);
  overflow: hidden;
}

.rocket{
  position: absolute;
  z-index: 1;
}

#rocket {
  -webkit-animation: popup 10s ease infinite;
  -moz-animation: popup 10s ease infinite;
  -o-animation: popup 10s ease infinite;
  animation: popup 10s ease infinite;

}

#cloud1{
  -webkit-animation: fall 15s linear infinite;
  -moz-animation: fall 15s linear infinite;
  -o-animation: sfall 15s linear infinite;
  animation: fall 15s linear infinite;
}

#cloud2{
  -webkit-animation: fall-2 10s linear infinite;
  -moz-animation: fall-2 10s linear infinite;
  -o-animation: fall-2 10s linear infinite;
  animation: fall-2 10s linear infinite;
}



/*Pop UP*/

@-webkit-keyframes popup {
  0% {
    transform: translate(75px,150px);
  }
  50% {
    transform: translate(75px,175px);
  }
  100% {
    transform: translate(75px,150px);
  }
}

@-moz-keyframes popup {
    0% {
      -moz-transform: translate(75px,150px);
    }
    50% {
      -moz-transform: translate(75px,175px);
    }
    100% {
      -moz-transform: translate(75px,150px);
    }
}

/*FALL 1*/


@-webkit-keyframes fall {
  from{
    transform: translateY(-100px);
  }
  to {
    transform: translateY(1000px)
  }
}

@-moz-keyframes fall {

    from{
      -moz-transform: translateY(-100px);
    }
    to {
      -moz-transform: translateY(1000px)
    }
}


/*FAll 2*/

@-webkit-keyframes fall-2 {
  from{
    transform: translate(100px,-100px);
  }
  to {
    transform: translate(100px,1000px)
  }
}

@-moz-keyframes fall-2 {

    from{
      -moz-transform: translate(100px,-100px);
    }
    to {
      -moz-transform: translate(100px, 1000px);
    }
}


/*Arrow*/

.scroll-down {
 width: 48px;
