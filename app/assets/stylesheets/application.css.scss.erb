/******* Home-resources-section *********/


.home-resources-section{
  text-align: center;
    padding-top: 35px;
    padding-bottom: 50px;
}


.home_section_heading{
  margin-top: 0px;
  margin-bottom: 18px !important;
  position: relative;
  text-align: center;
  font-size: 1.125em;
  line-height: 24px;
}
.home_section_heading span {
    position: relative;
    background: #FFF none repeat scroll 0% 0%;
    z-index: 2;
    padding-left: 18px;
    padding-right: 18px;
}

.home_section_heading::before {
    content: "";
    display: block;
    border-top: 1px solid #E3E3E3;
    width: 100%;
    height: 1px;
    position: absolute;
    top: 50%;
    z-index: 1;
}

.home_section_caption {
    text-align: center;
    color: #7D7D7D;
    font-size: 0.875em;
  line-height: 24px;
    margin-left: 15px;
    margin-right: 15px;
}

.line-section {
    width: 100%;
    height: 1px;
    background: #E3E3E3 none repeat scroll 0% 0%;
    margin-top: 30px !important;
    margin-bottom: 50px;
}

.resources-img{
    width: 100px;
}
.home-resources-heading{
    margin-top: 10px !important;
    margin-bottom: 6px !important;
}
.home-resources-p{
    font-size: 0.825em;
    margin-top: 15px !important;
    margin-bottom: 20px;
    margin-left: 15px;
    margin-right: 15px;
}


