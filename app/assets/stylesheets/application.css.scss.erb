/*************************************/
/************  Index NavBar *********/
/***********************************/

/*Global*/
.dropdown:focus{ outline: none !important; }
.nav>li>a:focus{ outline: none !important; }
.navbar{ border-radius: 0px !important;  }
.navbar-default{ background-color: #06476b; border-color: #06476b; }
.navbar-default .navbar-nav>.open>a{ background-color: transparent !important; }
.navbar-nav > li > a{ margin-left:10px; margin-right:10px; font-size: 15px; }
.navbar-default .navbar-nav>li>a{ color: white; }
.navbar-default .navbar-nav>li>a:hover{ color: white; }
.navbar-collapse.collapse { display: block!important; }
.navbar-nav>li, .navbar-nav { float: left !important; margin: 0 !important; }
.navbar-right { float: right!important; }
/*Logos*/
.navbar{ margin: 0px !important; }
#logo{ display: none; width: 225px; margin-top: -35px; margin-left: -10px }
#isotipo{ width: 70px; margin-top: -15px; margin-left: -35px;}
/*Calendar*/
.nav-calendar-wrapper{ display: none !important; }
.nav-calendar{ margin-top: 15px !important; padding: 0 !important; }
.notification-calendar{ width: 20px; }
/*User*/
.nav-profile-wrapper{ display: none !important; }
.nav-profile-link{ padding: 12px !important; }
.nav-profile-img{ border-radius: 50%; height: 30px; width: 30px }
.profile-dropdown{ padding: 5px 0px 0px 0px !important; }
.dropdown-menu{ margin-left: -125px !important; }
.navbar-nav .open .dropdown-menu{ position: absolute !important; top: 100%; right: 0 !important; float: left; min-width: 275px; padding: 5px 0;
								  margin: 2px 0 0; font-size: 14px; text-align: left; list-style: none; background-color: #fff;
	                              -webkit-background-clip: padding-box; background-clip: padding-box; border: 1px solid #ccc;
	                              border: 1px solid rgba(0, 0, 0, .15); border-radius: 4px; -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, .175); box-shadow: 0 6px 12px rgba(0, 0, 0, .175) }
.navbar-footer{ background-color: #DDD; }
.navbar-footer-content{ padding: 15px; }
.btn-session{ padding: 5px !important; width: 75px;}
/*Mobile Menu*/
.nav-mobile-btn{ border: 1px solid white; padding: 7px !important; margin-top: 8px !important; border-radius: 50%;}
.nav-menu-btn{ width: 20px; }
.mobile-menu-icon{ display: block;}

/**********************************************************/
/****************** MAterial Navbar  *********************/
/********************************************************/

/**** Tabs Content ****/
.index-nav-item{ padding: 15px; border-bottom: 1px solid rgb(225, 225, 225); }
.index-nav-item svg{ width: 30px; height: 24px; fill: #60676d; margin-bottom: -5px }
.index-nav-item a:hover { text-decoration: none; }
.side-bar-container { background-color: #06476b; height: 51px; color: #fff; text-align: center; position: relative; border: 2px solid #33a6cc; }
.side-bar-container h1 { font-size: 15px; padding-top: 15px !important; }
.sidenav { height: 100%; width: 0; position: fixed; top: 0; left: 0; background-color: #fff; overflow-x: hidden; transition: 0.5s; z-index: 3000; }
.sidenav-right{ height: 100%; width: 0; position: fixed; top: 0; right: 0; background-color: #fff; overflow-x: hidden; transition: 0.5s; z-index: 3000; }
.sidenav a { transition: 0.3s }
.closebtn { position: absolute; top: -5px; right: 25px; font-size: 36px !important; margin-left: 50px; color: #fff;}
.closebtn:hover { color: #fff;}

