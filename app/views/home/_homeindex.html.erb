	<div class="home-payment-section home_section_wrapper container-fluid">
		<div class="row center-container lg-screen-container">
			<div id="registration" class="col-sm-4 aprendemy-text">
				<h1>Crear una cuenta gratis para empezar.</h1>
			</div>
			<div class="form-card col-sm-6 col-sm-offset-1">
			  <p class="trial-banner basic">Empieza hoy mismo!</p>

			    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			      <%= devise_error_messages! %>
			      <div class="row">
			      	<div class="col-sm-6">
			      	   <%= f.text_field :first_name, class: "input-text", :placeholder => "Nombre", autofocus: true %>
				  	</div>
				  
				  	<div class="col-sm-6">
				  		<%= f.text_field :last_name, class: "input-text", :placeholder => "Apellido", autofocus: true %>
				  	</div>
				  	<div class="col-sm-12">
				  		<%= f.email_field :email, class: "input-text", :placeholder => "Email", autofocus: true %>
				    </div>
				    <div class="col-sm-12">
					    <%= f.password_field :password, class: "input-text", :placeholder => "Password (Mínimo 8 caracteres)", autocomplete: "off" %>
					</div>
					<div class="col-sm-12">
						<%= f.password_field :password_confirmation, class: "input-text", :placeholder => "Confirmación de Password", autocomplete: "off" %>
					</div>
					<div class="col-sm-12">
						<%= f.submit "Reclama tu prueba gratis", class: "free-trial-button" %>
					</div>
				  </div>
				<% end %>
			</div>
		</div>
	</div>

