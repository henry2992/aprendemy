<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header landing-modal-title">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title " id="myModalLabel">Empieza hoy mismo!</h4>
      </div>
      <div class="modal-body">

        <!-- Facebook Button -->
        <%= link_to "users/auth/facebook", class: "register-fb-btn btn btn-primary" do %> 
           <i class="fa fa-facebook-square register-fb-text"> Regístrate con Facebook </i> 
        <% end %>

        <!--  Divider -->
        <div class="divider">
            <i class="fa fa-circle-o"></i>
        </div>

        <p class="data-create-account">Crea una cuenta con tus datos</p>
        <!-- Form -->
        <div class="form-card">
           <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          
            <%= devise_error_messages! %>
            <div class="row">
              <div class="col-sm-6">
                 <%= f.text_field :first_name, class: "form-input-text", :placeholder => "Nombre"%>
              </div>
          
              <div class="col-sm-6">
                <%= f.text_field :last_name, class: "form-input-text", :placeholder => "Apellido"%>
              </div>
              <div class="col-sm-12">
                <%= f.email_field :email, class: "form-input-text", :placeholder => "Email" %>
              </div>
              <div class="col-sm-12">
                <%= f.password_field :password, class: "form-input-text", :placeholder => "Password (Mínimo 6 caracteres)", autocomplete: "off" %>
              </div>
              <div class="col-sm-12">
                <%= f.password_field :password_confirmation, class: "form-input-text", :placeholder => "Confirmación de Password", autocomplete: "off" %>
              </div>
              <br>
              <div class="col-sm-12" >
                <div class= "form-input-text" >
                  <%= f.label :Género, class: "gender-text"%>
                  <%= f.radio_button :gender, true %><%= image_tag("avatar-girl.png", :class=> 'img-gender' ) %>
                  <%= f.radio_button :gender, false %><%= image_tag("avatar-guy.png", :class=> 'img-gender') %>
                </div>
              </div>
                    
              <div class="col-sm-12">
                <%= f.submit "Regístrarme", class: "trial-button" %>
              </div>


          </div>
        <% end %>

                
        </div>

      </div>
    </div>
  </div>
</div>



<script type="text/javascript">
    $(function(){ 
      $(window).scroll(function() {

        // height on Scroll
        var scrolltop = $(window).scrollTop();

        // Height of landing init
        var headerheight = $(".landing-init").height();
        
        console.log(scrolltop);
        console.log(headerheight);
        
        if (headerheight == scrolltop) {
          if (scrolltop > 422) {
            $(".topbar").addClass("visible");
          }
          if (scrolltop < 422) {
            $(".topbar").removeClass("visible");
          }
        } else {
          if (scrolltop > headerheight) {
            $(".topbar").addClass("visible");
          }
          if (scrolltop < headerheight) {
            $(".topbar").removeClass("visible");
          }
        }   
        
      });

    });

    // Scroll

   $(".scroll").click(function(event){
         event.preventDefault();
         //calculate destination place
         var dest=0;
         if($(this.hash).offset().top > $(document).height()-$(window).height()){
              dest= $(document).height()-$(window).height();
         }else{
              dest=$(this.hash).offset().top;
         }
         //go to destination
         $('html,body').animate({scrollTop:dest}, 1000,'swing');
     });

</script>

