.application-navbar-profile
  .profile-header-img
    - if (current_user.image.present?)
      = image_tag(current_user.image.url, class: "app-navbar-profile-img", alt: "Apredemy-avatar")
    - else
      - if (current_user.gender == false)
        = image_tag("avatar-guy.png", class: "app-navbar-profile-img", alt: "Apredemy-avatar")
      - else
        = image_tag("avatar-girl.png", class: "app-navbar-profile-img", alt: "Apredemy-avatar")
  %h1.app-navbar-heading
    = current_user.first_name
    = current_user.last_name
  %p.app-navbar-text= current_user.email
