<div class="application-navbar-profile">

	<div class="profile-header-img">
		<% if (current_user.image.present?) %>
			<%= image_tag(current_user.image, class: "app-navbar-profile-img", alt: "Apredemy-avatar") %>
		<% else %>
			<% if (current_user.gender == false) %>
				<%= image_tag("avatar-guy", class: "app-navbar-profile-img", alt: "Apredemy-avatar") %>
			<% else %>
				<%= image_tag("avatar-girl", class: "app-navbar-profile-img", alt: "Apredemy-avatar") %>
			<%end %>
		<%end%>

		<!-- <div class="rank-label-container">
	        <span class="label label-default rank-label"><%= current_user.points %> puntos</span>
	    </div> -->
	</div>



	<h1 class="app-navbar-heading"><%= current_user.first_name %> <%= current_user.last_name %></h1>
	<p class="app-navbar-text"><%= current_user.email %></p>

	<% if current_user.free? %>
		<p class="app-navbar-text">
			Tu licencia expira en:
			<br><%= current_user.license.days_left %> d√≠as<br>
			<a href="/payments">Hazte Premium</a>
		</p>
	<%end%>

	<div>


		<div id="fb-root"></div>
		<script>
			FB = null;
			(function(d, s, id) {
			  var js, fjs = d.getElementsByTagName(s)[0];
			  // if (d.getElementById(id)) return;
			  js = d.createElement(s); js.id = id;
			  js.src = "//connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v2.5&appId=928864270524469";
			  fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
		</script>
