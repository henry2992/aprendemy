<% category ||= @category %>
<h3><%= category.name %></h3>

<table>
  <thead>
    <tr>
      <th>Sub Category</th>
      <th>Total questions</th>
      <th>Questions Answered</th>
      <th>Correct</th>
      <th>Incorrect</th>
    </tr>
  </thead>
  <tbody>
  <% category.sub_categories.each do |sub_category| %>

  <tr>
    <td><%= sub_category.name %></td>
    <td><%= sub_category.questions.count %></td>
    <td><%= sub_category.questions_answered(current_user.id).count %></td>
    <td><%= sub_category.answered_correctly(current_user.id).count %></td>
    <td><%= sub_category.answered_incorrectly(current_user.id).count %></td>
  </tr>
  <% end if category %>
  </tbody>
</table>
