<% if @category %>
  <h1><%= @category.name %></h1>
  <%= link_to "Edit", edit_category_path(@category)%> |
  <%= link_to "Create a sub category", new_category_sub_category_path(@category) %>

  <% @category.sub_categories.each do |sub_category| %>
    <% link_to sub_category.name, categories_sub_category_path(sub_category) %>
  <% end if @category.sub_categories %>
<% end %>
