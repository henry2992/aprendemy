<% if @category %>
  <h1><%= @category.name %></h1>
  <%= link_to "< Back to categories", categories_path %> |

<ul>
  <% @category.sub_categories.each do |sub_category| %>
    <li><%= link_to sub_category.name, category_sub_category_path(@category, sub_category) %></li>
  <% end if @category.sub_categories %>
<% end %>
</ul>
