<div class="container edit-profile-container" >
    <h1 class="edit-profile-heading">Editar Perfil</h1>
    <div class="row">
      <!-- left column -->
      <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="text-center">
          <% if (current_user.image != nil) %>
            <img src="<%= current_user.image%>" class="avatar-profile img-circle img-thumbnail" alt="Apredemy-foto-usuario">
          <% else %>
            <%= image_tag("avatar.png", class: "app-navbar-profile-img", alt: "Apredemy-avatar") %>
          <%end%>
          <h6 class="change-picture-tex">Cambia de foto de perfil...</h6>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>

              <%= f.label :image %><br />
              <%= f.file_field :image, :class => 'text-center center-block well well-sm' %>

              <%= f.submit "Update", :class => 'text-center center-block well well-sm' %>

          <% end %>

          <!-- <input type="file" class="text-center center-block well well-sm"> -->
        </div>
      </div>

      <!-- edit form column -->
      <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
        
        <h3 >Informaci√≥n Personal</h3>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.label :first_name, :class=> 'col-lg-3 control-label' %>
                <div class="col-lg-8">
                  <%= f.text_field :first_name, autofocus: true %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :last_name, :class=> 'col-lg-3 control-label' %>
                <div class="col-lg-8">
                  <%= f.text_field :last_name, autofocus: true %>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :gender, :class=> 'col-lg-3 control-label' %>
                <div class="col-lg-8">
                  <%= f.radio_button :gender, true %> Female
                  <%= f.radio_button :gender, false %>Male
                </div>
              </div>

              <div class="actions">
                <%= f.submit "Update" %>
              </div>
          <% end %>
      </div>
    </div>
</div>
