
<div id="application"> 
  <div id="container">
    <div class="container " >
        <h1 class="edit-profile-heading">Editar Perfil</h1>
        <div class="row">
          <!-- left column -->
          <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="text-center">

              <% if current_user.image.present? %>
                  <%= image_tag(current_user.image.url, class: "avatar-profile img-thumbnail", alt: "Apredemy-avatar") %>
              <% else %>
                  <% if (current_user.gender == false) %>
                      <%= image_tag("avatar-guy.png", class: "avatar-profile img-thumbnail", alt: "Apredemy-avatar") %>
                  <% else %>
                      <%= image_tag("avatar-girl.png", class: "avatar-profile img-thumbnail", alt: "Apredemy-avatar") %>
                  <%end %>
              <%end%>

              <h6 class="change-picture-tex">Cambia de foto de perfil...</h6>
              <br>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  
                  <%= devise_error_messages! %>

                  <%= f.hidden_field :first_name, :value => current_user.first_name %>

                  <%= f.file_field :image, title: "Escoge tu foto de perfil", :class => 'text-center center-block well well-sm' %>


                  <%= f.submit "Actualizar Foto de Perfil", :class=> 'btn btn-primary'  %>

              <% end %>

              
            </div>
          </div>

          <!-- edit form column -->
          <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
            
            <h3 >Información Personal</h3>
              
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => "form-horizontal" }) do |f| %>
                  <%= devise_error_messages! %>

                  <div class="form-group">
                    <%= f.label :Nombre, :class=> 'col-lg-3 control-label' %>
                    <div class="col-lg-8">
                      <%= f.text_field :first_name, :class=> 'form-control', autofocus: true %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label :Apellido, :class=> 'col-lg-3 control-label' %>
                    <div class="col-lg-8">
                      <%= f.text_field :last_name, :class=> 'form-control', autofocus: true %>
                    </div>
                  </div>

                  <div class="form-group">
                    <%= f.label :Género, :class=> 'col-lg-3 control-label' %>
                    <div class="col-lg-8">
                      <%= f.radio_button :gender, true%><%= image_tag("avatar-girl.png", :class=> 'img-gender' ) %>
                      <%= f.radio_button :gender, false %><%= image_tag("avatar-guy.png", :class=> 'img-gender') %>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                      <%= f.submit "Actualizar", :class=> 'btn btn-primary'  %>
                      <span></span>
                      <a href="/" class="btn btn-default">Cancelar</a>
                    </div>
                  </div>

              <% end %>
          </div>
        </div>
    </div>
  </div>
</div>


