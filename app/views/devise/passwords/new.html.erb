
<div class="container">
	<div class="password-reset-holder">
		<h2>¿Olvidaste tu contraseña?</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field">
		    <%= f.label :email %><br />
		    <%= f.email_field :email, autofocus: true %>
		  </div>

		  <div class="actions password-rec-holder">
		    <%= f.submit "Enviar instrucciones", class: "password-rec-link  btn btn-primary" %>
		  </div>
		<% end %>

		<a class="sessions-link" href="/users/sign_up">¿No tienes una cuenta? Regístrate
          </a>

	</div>
</div>