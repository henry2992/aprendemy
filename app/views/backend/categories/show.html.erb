<div id="container">
  <!-- Vertical Nav -->
  <%= render 'backend/navigation/vertical_navbar' %>
  
  <div class="main-navigation">

    <div class="main-title-wrapper">
      <h1> <%= @backend_category.course.name %> | <%= @backend_category.name %> </h1>
    </div>
    <div class="main-content-wrapper">
      <p id="notice"><%= notice %></p>
      <div class="row">
        <div class="col-sm-12">
          <%= link_to 'Nueva Sub-categorÃ­a', new_backend_course_category_sub_category_path(@backend_category.course, @backend_category), class: "btn btn-primary" %>
