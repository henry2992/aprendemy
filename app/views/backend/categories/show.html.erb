                  <br>
                </div>
              </div>
              <%= link_to 'Eliminar', backend_course_category_sub_category_path(@backend_category.course, @backend_category, sub_category), method: :delete, data: { confirm: 'Â¿EstÃ¡ seguro de eliminar este registro?' }, class: "btn btn-danger" %>
