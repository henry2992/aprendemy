<div id="container">
  <!-- Vertical Nav -->
  <%= render 'backend/navigation/vertical_navbar' %>
  
  <div class="main-navigation">

    <div class="main-title-wrapper">
      <h1> Categor√≠as </h1>
    </div>
    <div class="main-content-wrapper">
      <p id="notice"><%= notice %></p>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Sub categories count</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @backend_categories.each do |backend_category| %>
            <tr>
              <td><%= backend_category.name %></td>
              <td><%= backend_category.sub_categories_count %></td>
              <td><%= link_to 'Show', backend_category_path(backend_category) %></td>
              <td><%= link_to 'Edit', edit_backend_category_path(backend_category) %></td>
              <td><%= link_to 'Destroy', backend_category_path(backend_category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New category', new_backend_category_path %>

    </div>
  </div>
</div>

