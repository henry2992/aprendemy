<div id="application"> 

    <div id="container">
      <!-- Content Homework Progress-->
      <div class="test-wrapper">
        
        <div class="test-title-wrapper">
          <h1> Pruebas de Aptitud</h1>
        </div>
          <div class="test-content-wrapper">
            <div class=" row rox-fix">
              <% @uat.each do |a| %>
                <div class="test-question">
                  <div class="row">
                    <div class="col-sm-2">
                      <% if (a.user.image.present?) %>
                            <%= image_tag(a.user.image.url, class: "img-responsive", alt: "#{a.user.first_name} #{a.user.last_name}") %>
                        <% else %>
                            <% if (a.user.gender == false or a.user.gender == nil) %>
                                <%= image_tag("avatar-guy.png", class: "img-responsive", alt: "#{a.user.first_name} #{a.user.last_name}") %>
                            <% else %>
                                <%= image_tag("avatar-girl", class: "img-responsive", alt: "#{a.user.first_name} #{a.user.last_name}") %>
                            <%end %>
                      <%end%>
                    </div>
                    <div class="col-sm-10">
                      <h6><%= a.user.first_name %> <%= a.user.last_name %></h6>
                      <h3><%= a.test.title %></h3>
                      <span style="background-color: #ffffcc"><%= a.observation if a.observation %></span>
                      <span class="pull-right">
                        <%= link_to 'Ver respuestas', backend_attitude_path(a), class: 'btn btn-info' %>
                      </span>
                    </div>
                  </div>
                </div>
              <% end %>
              <% # raise @uat.to_yaml %>
            </div>  
          </div>
      </div>
    </div>
</div>
