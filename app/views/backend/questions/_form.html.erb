<%= form_for [:backend, @course, @category, @sub_category, @backend_question] do |f| %>
  <% if @backend_question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@backend_question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @backend_question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    Pregunta <br>
    <%= f.text_field :content, class: "form-control", placeholder: "Pregunta" %>
  </div>
  <div class="form-group">
    Explicación <br>
    <%= f.text_area :explanation, class: "form-control", placeholder: "Explicación" %>
  </div>
  <div class="form-group">
    URL <br>
    <%= f.text_field :url, class: "form-control", placeholder: "URL" %>
  </div>
  <div class="form-group">
    Video <br>
    <%= f.text_field :video_url, class: "form-control", placeholder: "Video" %>
  </div>
  <div class="form-group">
    Pregunta Padre <br>
    <%= f.text_field :question_id, class: "form-control", placeholder: "Pregunta Padre" %>
  </div>
  <div class="row">
    <% if @backend_question.picture? %>
      <div class="col-md-4">
        <div class="form-group">
          <%= cl_image_tag @backend_question.picture.url, class: "img-responsive" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-8">
      <div class="form-group">
        <label for="picture">Imagen</label>
        <%= f.file_field(:picture, accept: 'image/png,image/gif,image/jpeg') %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label for="total_answered_count">Total de respuestas</label>
        <%= @backend_question.total_answered_count %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="wrong_answered_count">Respuestas correctas</label>
        <%= @backend_question.total_answered_count - @backend_question.wrong_answered_count %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <label for="wrong_answered_count">Respuestas incorrectas</label>
        <%= @backend_question.wrong_answered_count %>
      </div>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit class: 'btn btn-success' %> 
  </div>
<% end %>