<%= form_for [:backend, @course, @category, @backend_sub_category] do |f| %>
  <% if @backend_sub_category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@backend_sub_category.errors.count, "error") %> prohibited this sub-category from being saved:</h2>

      <ul>
      <% @backend_sub_category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    Nombre <br>
    <%= f.text_field :name, class: "form-control", placeholder: "Nombre" %>
  </div>
  <div class="form-group">
    Descripción <br>
    <%= f.text_area :description, class: "form-control", placeholder: "Descripción" %>
  </div>
  <div class="row">
    <% if @backend_sub_category.picture? %>
      <div class="col-md-4">
        <div class="form-group">
          <%= cl_image_tag @backend_sub_category.picture.url, class: "img-responsive" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-8">
      <div class="form-group">
        <label for="picture">Imagen</label>
        <%= f.file_field(:picture, accept: 'image/png,image/gif,image/jpeg') %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-success' %> 
  </div>
<% end %>