<style type="text/css">


  <% @events_types.each do |et|  %>
    .<%= et.name %>:before{
      background: <%= et.color %>
    }
  <% end %>

</style>

<div id="application"> 

  <div class="events-holder">

        <div class="container">




            <div class="events-heading">
              <h1 class="events-title">Lo que viene en Aprendemy para ti</h1>
              <ul class="legend">
                <% @events_types.each do |et|  %>
                  <li class="<%= et.name %>"><%= et.name %> </li>
                <% end %>
              </ul>
            </div>

            <%= month_calendar events: @events do |date, meetings| %>
              <%= date.day %>


              <% meetings.each do |meeting| %>
                
                <div>
                  <%= meeting.name %>
                  <br>
                  <%= meeting.start_time.strftime(" %I:%M  %p ") %>
                </div>
              <% end %>


            <% end %>


            <div class="sessions-wrapper">
                <!-- Session -->
                <% @events.each do |event| %>
                  <div class="sessions-dates ">
                    <div class="row row-fix">
                      <div class="row-date col-xs-12 col-sm-3 col-md-2">
                        <strong><%= I18n.localize(event.start_time, :format => " %B  %e ") %></strong>
                        <%= event.start_time.strftime(" %I:%M  %p ") %>
                      </div>

                      <div class="col-xs-12 col-sm-9 col-md-10">
                        <span class="RowDate-detailCopy"><%= event.name %></span>
                        <span class="tag" style="background-color: rgb(218, 240, 188); background-position: initial initial; background-repeat: initial initial;">Sesi√≥n en vivo</span>
                      </div>
                    </div>
                  </div>
                <% end %>
            </div>


          </div>
    </div>

</div>


