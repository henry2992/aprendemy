<script>
	$("#show-eval").hide();
	$("#close-eval").click(function(event) {
			$(".eval").hide('slow');
			$("#show-eval").show('slow');
			return false;
	});
	$("#show-eval").click(function(event) {
			$(this).hide('slow');
			$(".eval").show('slow');
			return false;
	});
</script>