.alert.fade.in.alert-notice{ :style=>"display:none; margin-bottom:0;"}
  .button.close{ :"data-dismiss"=>"alert"}
    ×
  .show-flash
.application-wrapper.container-fluid
  .row
    =render 'layouts/user_sidebar'
    - show_explanation = !@answers.nil?
    .main-bg
      %content
        .content-wrapper.col-sm-9.col-md-10
          .application-content
            .content-margin.row
              %ol.breadcrumb{:style=>"background-color:#fff"}
                = render_breadcrumbs :tag => :li, :separator => ""
        .content-wrapper.col-sm-9.col-md-10
          .application-content
            .content-margin.row
              .app-text-holder.row.main-bg
                %content
                  %h3= "Exámenes para el Curso " + @course.name
                  = link_to "Nuevo Examen", student_new_test_path(), class: 'btn btn-primary'
        .content-wrapper.col-sm-9.col-md-10
          .application-content
            .content-margin.row
              .app-text-holder.row.main-bg
                %content
                  %h3= "Tabla de Exámenes"
                  %table.table
                    %thead
                      %tr
                        %th
                          Examen
                        %th
                          Estado
                        %th
                          Preguntas Totales
                        %th
                          Fecha
                        %th
                          Preguntas Contestadas
                        %th
                          Preguntas Correctas
                        %th
                          Preguntas Incorrectas
                        %th
                          Acciones
                    %tbody
                      - @tests.each do |t|
                        %tr
                          %td
                            = t.title
                          %td
                            = if t.completed then 'Completado' else 'No Completado'
                          %td
                            = t.questions.count
                          %td
                            = t.created_at
                          %td
                            / Preguntas Contestadas
                          %td
                            / Preguntas Correctas
                          %td
                            / Preguntas Incorrectas
                          %td
                            / Acciones
